<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>API.Aplication</servlet-name>
        <init-param>
            <param-name>com.sun.jersey.api.json.POJOMappingFeature</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>API.Aplication</servlet-name>
        <url-pattern>/webapi/*</url-pattern>
    </servlet-mapping>

    <!--<servlet>
        <servlet-name>registrationController</servlet-name>
        <servlet-class>controllers.registrationController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>registrationController</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>-->

    <servlet>
        <servlet-name>productsTypeController</servlet-name>
        <servlet-class>controllers.productsTypeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsTypeController</servlet-name>
        <url-pattern>/products-type</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsControler</servlet-name>
        <servlet-class>controllers.productsControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsControler</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>productsCategoriesController</servlet-name>
        <servlet-class>controllers.productsCategoriesController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>productsCategoriesController</servlet-name>
        <url-pattern>/productCategories</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controllers.loginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logoutControler</servlet-name>
        <servlet-class>controllers.logoutControler</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logoutControler</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>