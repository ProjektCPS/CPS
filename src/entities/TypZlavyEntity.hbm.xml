<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.TypZlavyEntity" table="typ_zlavy" schema="sprava_cien_project">
        <id name="idTypu">
            <column name="id_typu" sql-type="int(11)"/>
        </id>
        <property name="nazovTypu">
            <column name="nazov_typu" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="popis">
            <column name="popis" sql-type="varchar(2000)" length="2000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>