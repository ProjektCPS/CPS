<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.KategorieEntity" table="kategorie">
        <id name="idKategorie">
            <column name="id_kategorie" sql-type="int(11)"/>
        </id>
        <property name="idTypu">
            <column name="id_typu" sql-type="int(11)"/>
        </property>
        <property name="nazov">
            <column name="nazov" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="popis">
            <column name="popis" sql-type="varchar(4000)" length="4000" not-null="true"/>
        </property>
    </class>
</hibernate-mapping>