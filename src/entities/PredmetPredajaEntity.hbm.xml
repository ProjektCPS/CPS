<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entities.PredmetPredajaEntity" table="predmet_predaja">
        <id name="idPredmetu">
            <column name="id_predmetu" sql-type="int(11)"/>
        </id>
        <property name="idKategorie">
            <column name="id_kategorie" sql-type="int(11)"/>
        </property>
        <property name="nazov">
            <column name="nazov" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="cena">
            <column name="cena" sql-type="double" precision="-1"/>
        </property>
        <property name="jednotka">
            <column name="jednotka" sql-type="varchar(20)" length="20"/>
        </property>
        <property name="datumExpiracie">
            <column name="datum_expiracie" sql-type="date" not-null="true"/>
        </property>
        <property name="znacka">
            <column name="znacka" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="serioveCislo">
            <column name="seriove_cislo" sql-type="varchar(30)" length="30" not-null="true"/>
        </property>
        <property name="popis">
            <column name="popis" sql-type="varchar(4000)" length="4000" not-null="true"/>
        </property>
        <property name="idAdmin">
            <column name="id_admin" sql-type="int(11)"/>
        </property>
    </class>
</hibernate-mapping>